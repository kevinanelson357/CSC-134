double tax_amount = sub_total * tax_rate;
double total_price = sub_total + tax_amount;


    // get user input
cout << " Welcome to Therma's Place" << endl;
cout << "Today's special: " << meal_name <<endl;
cout << endl;
cout << " How many would you like? ";
cin >> num_meals

    //do calculation



//  Present the output
cout << endl;
cout << "Your order" << endl << "__________________________" << endl;
cout << num_meals << " x " << meal_name << "$" << meal_price << endl;
