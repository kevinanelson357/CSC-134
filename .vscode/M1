#include <iostream>
using namespace std;
int main(){
    // This program will simulate an apple orchard.
    string name = " Nelly"
    int apples = 100
    double pricePerApple = 0.25
    double totalPrice = apples * pricePerapple

    // print all the information about the orchard
    cout << " Welcome to " < name;
    cout << " 's apple orchaed!" << endl;
    cout << " We've got " << apples;
    cout << " apples currently in stock." << endl;
    cout << " Apples cost $";
    cout << pricePerApple << " each" endl;
    cout << "If you'd like them all, that will be $" <<
    totalPrice << endl;
}
